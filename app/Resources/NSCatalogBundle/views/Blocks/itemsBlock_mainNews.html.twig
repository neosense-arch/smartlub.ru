<div class="boxNews">
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12">
                <h2>Новости отрасли</h2>
                <a href="{{ url('ns_cms_page_name', {name: 'news'}) }}" class="btn">Все новости</a>
                <div class="row clearfix">
                    {% for item in items %}
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                            <div class="boxOneNew">
                                <a href="{{ url('sl_front_news_item', {itemSlug: item.slug}) }}">
                                    <img src="{{ ('upload/j/' ~ item.settings.photo) | apply_filter('main_news_item') }}" alt="">
                                </a>
                                <div class="descriptionNew">
                                    <div class="descriptionNewCont">
                                        <p class="date">{{ item.settings.createdAt|date('d.m.Y') }}</p>
                                        <a href="{{ url('sl_front_news_item', {itemSlug: item.slug}) }}" class="name">{{ item.title }}</a>
                                        <p>{{ item.settings.description|nl2br }}</p>
                                    </div>
                                </div>
                                <div class="clear"></div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
