<ul class="productsList">
    {% for item in items %}
        <li class="col-lg-3 col-md-4 col-sm-6 col-xs-6">
            <div class="oneProduct">
                <a href="{{ url('ns_catalog_item', {categorySlug: item.category.slug, itemSlug: item.slug}) }}">
                    <img src="{{ asset('/bundles/slfront/img/01_img_1.jpg') }}" alt="">
                </a>
                <p class="price">{{ item.settings.price|ns_price }} руб.</p>
                <a href="{{ url('ns_catalog_item', {categorySlug: item.category.slug, itemSlug: item.slug}) }}" class="name">
                    {{ item.title }}
                </a>
                <a href="#" class="btn add-to-cart" data-url="{{ url('ns_shop_cart_add') }}" data-id="{{ item.id }}">В корзину</a>
                {% if item.settings.isNew %}
                    <div class="new">NEW</div>
                {% endif %}
            </div>
        </li>
    {% endfor %}
</ul>
