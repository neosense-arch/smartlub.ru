{#
	Common vars
	* block    [NS\CmsBundle\Entity\Block]
	* settings [NS\FeedbackBundle\Block\Settings\FeedbackBlockSettingsModel]
	    * formId     [int]
	    * ignorePost [boolean]

	Root-level vars
	* form     [Symfony\Component\Form\FormView]
	* success  [boolean]
	* uid      [string]
	* ajaxUrl  [string]
#}

{#<div class="boxBottom">#}
    {#<div class="container-fluid">#}
        {#<div class="row clearfix">#}
            {#<div class="col-lg-12">#}
                <div class="blockFormContact">
                    <h1>Написать письмо</h1>

                    {% if success %}
                        {# Success message after POST #}
                        <p>Ваше сообщение успешно отправлено!</p>
                    {% else %}
                        {# Feedback form #}
                        <form method="post" class="{{ uid }}">
                            <div class="row clearfix">
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    <div class="form-group">
                                        <label>{{ form.name.vars.label }}</label>
                                        {{ form_widget(form.name, {'attr':{'class': 'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    <div class="form-group">
                                        <label>{{ form.email.vars.label }}</label>
                                        {{ form_widget(form.email, {'attr':{'class': 'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    <div class="form-group">
                                        <label>{{ form.phone.vars.label }}</label>
                                        {{ form_widget(form.phone, {'attr':{'class': 'form-control'}}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>{{ form.message.vars.label }}</label>
                                {{ form_widget(form.message, {'attr':{'class': 'form-control'}}) }}
                            </div>
                            <button type="submit" class="btn btn-default btn-lg btn-contact">Отправить</button>

                            {{ form_rest(form) }}
                        </form>
                    {% endif %}
                </div>
            {#</div>#}
        {#</div>#}
    {#</div>#}
{#</div>#}

