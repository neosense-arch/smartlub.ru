<div class="container-fluid">
    <div class="row clearfix">
        <div class="col-lg-12">
            <div class="boxSort">
                <div class="row clearfix">
                    {{ form_start(form) }}
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6">
                        <div class="boxSelect">
                            {{ form_widget(form.vendor, { 'attr': {'class': 'styled'}}) }}
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6">
                        <div class="boxSelect">
                            {#<select class="styled">#}
                                {#<option>Еще какой-то фильтр</option>#}
                                {#<option>Еще какой-то фильтр2</option>#}
                            {#</select>#}
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                        <div class="blockSliderPrice">
                            <div class="sliderPriceCont">
                                <div class="slider-box" id="slider-price" data-from="{{ settings.priceFrom }}" data-to="{{ settings.priceTo }}" data-step="{{ settings.priceStep }}">
                                    <div class="slider"></div>
                                    <div class="inner">
                                        <div class="left">
                                            {{ form_widget(form.priceFrom, { 'attr': {'class': 'text ns-price-from'}}) }}
                                            <span>руб.</span>
                                        </div>
                                        <div class="right">
                                            {{ form_widget(form.priceTo, { 'attr': {'class': 'text ns-price-to'}}) }}
                                            <span>руб.</span>
                                        </div>
                                        <div class="clear"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn">Показать</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
