<div class="container-fluid">
    <div class="row clearfix">
        <div class="col-lg-12">
            <div class="blockProducts catalog">
                <div class="row clearfix">
                    {% include 'NSCatalogBundle:Blocks:_items.html.twig' %}
                </div>
            </div>
        </div>
    </div>
</div>
<div class="boxBottom">
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12">
                {% if total > items|length %}
                    <div class="boxSumm ns-item-more-container" data-url="{{ url('sl_front_catalog_load_more', {categorySlug: categorySlug}) }}" data-total="{{ total }}" data-limit="{{ items|length }}">
                        <a href="#" class="btn btn-more ns-items-more"><span>Показать еще</span></a>
                    </div>
                    <div class="boxSumm ns-item-more-loader">
                        <span class="btn btn-more"><span>Загрузка</span></span>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

